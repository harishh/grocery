<p id="notice"><%= notice %></p>

<h1>Listing of Categories Available</h1>



<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <%= form_tag (categories_path, :method => 'get',id:"search-form") do %>
      
  <%= text_field_tag :search, params [:search], placeholder: "Search Categories" %>
  <%= submit_tag "Search" %>
  <% end %>
    

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td><%= link_to 'Show', category %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'NewProduct', new_product_path(:category_id => category.id) %></td>
         <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path %>
